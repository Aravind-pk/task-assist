{
  "name": "task-assist",
  "displayName": "task-assist",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Task Assist",
      "properties": {
        "codePlanner.openRouterApiKey": {
          "type": "string",
          "description": "OpenRouter API Key"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "task-assist-sidebar-view",
          "title": "Task Assist",
          "icon": "media/sparkle.svg"
        }
      ]
    },
    "views": {
      "task-assist-sidebar-view": [
        {
          "type": "webview",
          "id": "task-assist-sidebar",
          "name": "Task Assist",
          "icon": "media/checklist.svg",
          "contextualTitle": "Task Assist"
        }
      ]
    },
    "commands": [
      {
        "command": "task-assist.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "task-assist.setApiKey",
        "title": "Set API Key"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "svelte-build": "rollup -c",
    "svelte-dev": "rollup -c -w"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-typescript": "^8.1.0",
    "@tsconfig/svelte": "^1.0.10",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/polka": "^0.5.7",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.15.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "rollup": "^2.3.4",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.31.0",
    "svelte-check": "^1.1.23",
    "svelte-preprocess": "^4.6.1",
    "ts-loader": "^8.0.11",
    "typescript": "^4.1.2",
    "vscode-test": "^1.4.1",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "ignore": "^7.0.3",
    "polka": "^0.5.2"
  }
}
